<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFBED"
    tools:context=".fruitsInSeason">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Fruits in Season"
        android:textColor="#193A1A"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.162" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="97dp"
        android:layout_height="37dp"
        android:layout_marginEnd="112dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Hi, Bob!"
        android:textColor="#193A1A"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.073" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.055"
        app:srcCompat="@drawable/account" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="45dp"
        android:layout_height="51dp"
        android:layout_marginStart="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054"
        app:srcCompat="@drawable/logo" />

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.186">

        <Button
            android:id="@+id/item1"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_item_button"
            android:drawableLeft="@drawable/roundedbanana"
            android:drawableRight="@drawable/front_arrow"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="Banana\nAll year round"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="24dp" />

        <Button
            android:id="@+id/item2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_item_button"
            android:drawableLeft="@drawable/apple"
            android:drawableRight="@drawable/front_arrow"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="Apple\nMay - June"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="24dp" />

        <Button
            android:id="@+id/item3"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_item_button"
            android:drawableLeft="@drawable/peach"
            android:drawableRight="@drawable/front_arrow"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="Peach\nMay - June"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="400dp" />

        <Button
            android:id="@+id/item4"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_item_button"
            android:drawableLeft="@drawable/orange"
            android:drawableRight="@drawable/front_arrow"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="Orange\nMay - August"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="24dp" />

        <Button
            android:id="@+id/item5"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_corner_item_button"
            android:drawableLeft="@drawable/blackberry"
            android:drawableRight="@drawable/front_arrow"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="Blackberry\nAll year round"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="25dp" />


        <Button
            android:id="@+id/item6"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="350dp"
            android:layout_height="71dp"
            android:background="@drawable/rounded_corner_item_button"
            android:drawableLeft="@drawable/mango"
            android:drawableRight="@drawable/front_arrow"
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:text="Mango\nAll year round"
            android:textAllCaps="false"
            android:textSize="18sp"
            app:backgroundTint="@null"
            tools:layout_editor_absoluteX="25dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>